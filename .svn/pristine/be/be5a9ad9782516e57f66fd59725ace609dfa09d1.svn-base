<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="LibTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- 设置activity切换动画 -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:textColor">@color/lib_normal</item>
        <item name="android:textSize">@dimen/lib_text_size_normal</item>
        <item name="android:windowBackground">@color/lib_black</item>
        <item name="colorAccent">@color/lib_blue_4c98ea</item>
    </style>

    <!-- animation 样式 -->
    <style name="LibActivityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/lib_slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/lib_slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/lib_slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/lib_slide_right_out</item>
    </style>

    <style name="LibActivityEaseAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/lib_anim_ease_in</item>
        <item name="android:activityOpenExitAnimation">@anim/lib_anim_ease_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/lib_anim_ease_in</item>
        <item name="android:activityCloseExitAnimation">@anim/lib_anim_ease_out</item>
    </style>

    <style name="LibFloatingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="LibUnFloatingDialog" parent="LibFloatingDialog">
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="LibBottomInDialog">
        <item name="android:windowEnterAnimation">@anim/lib_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/lib_dialog_out</item>
    </style>

</resources>
