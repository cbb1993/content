<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_centerVertical="true"
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        fresco:placeholderImageScaleType="fitXY"
        fresco:placeholderImage="@mipmap/b"
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fresco:failureImage="@mipmap/b"
        fresco:failureImageScaleType="fitXY"
        />

    <TextView
        android:id="@+id/tv_title"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/lib_white"
        android:text="多媒体管理系统"
        app:layout_marginTopPercent="10%"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_heightPercent="8%" />
    <com.zhy.android.percent.support.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_marginTopPercent="10%"
        app:layout_heightPercent="60%"
        app:layout_widthPercent="40%"
        android:background="@drawable/shap_bg_gray_corner"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tv_login"
            android:textSize="18sp"
            android:text="用户登录"
            android:textColor="@color/lib_white"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_heightPercent="8%"
            app:layout_marginTopPercent="10%"
            android:layout_centerHorizontal="true"/>
    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/ll_account"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_login"
        app:layout_marginTopPercent="12%"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="10%"
        app:layout_widthPercent="64%"
        android:orientation="horizontal"
        >
        <ImageView
            android:background="#89929e"
            android:src="@mipmap/touxiang"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_widthPercent="12%"/>

        <EditText
            android:id="@+id/activity_login_tv_acount"
            android:textColor="#444"
            android:textColorHint="#999"
            android:paddingLeft="10dp"
            android:hint="请输入用户编号"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f0f0f0" />
    </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/ll_password"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ll_account"
            app:layout_marginTopPercent="7%"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="64%"
            android:orientation="horizontal"
            >
            <ImageView
                android:background="#89929e"
                android:src="@mipmap/touxiang"
                android:scaleType="fitXY"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_widthPercent="12%"/>
            <EditText
                android:id="@+id/activity_login_tv_password"
                android:textColor="#444"
                android:paddingLeft="10dp"
                android:textColorHint="#999"
                android:hint="请输入密码"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f0f0f0" />


        </com.zhy.android.percent.support.PercentLinearLayout>
        <TextView
            android:gravity="center"
            android:textColor="@color/lib_white"
            android:text="登录"
            android:id="@+id/activity_login_btn_confirm"
            android:background="@drawable/shap_bg_blue_corner"
            app:layout_marginTopPercent="16%"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/ll_password"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_heightPercent="10%"
            app:layout_widthPercent="64%"/>
    </com.zhy.android.percent.support.PercentRelativeLayout>
</com.zhy.android.percent.support.PercentRelativeLayout>
