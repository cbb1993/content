<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#4c98ea">

    <ImageView
        android:layout_above="@+id/sign"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@drawable/duomeiti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_centerInParent="true"
        android:id="@+id/sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/earth"
            android:layout_width="600dp"
            android:layout_height="300dp" />
        <ImageView
            android:src="@drawable/baidi"
            android:layout_width="600dp"
            android:layout_height="300dp" />
    <LinearLayout
        android:id="@+id/sign2"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
     <LinearLayout
         android:layout_marginTop="30dp"
         android:layout_gravity="center_horizontal"
         android:gravity="center_vertical"
         android:orientation="horizontal"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">

         <ImageView
             android:layout_gravity="center_horizontal"
             android:scaleType="fitXY"
             android:src="@drawable/touxiang"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/imageView" />

         <ImageView
             android:layout_marginLeft="5dp"
             android:layout_gravity="center_horizontal"
             android:scaleType="fitXY"
             android:src="@drawable/yonhudenglu"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
     </LinearLayout>

     <LinearLayout
         android:layout_marginTop="20dp"
         android:layout_gravity="center_horizontal"
         android:orientation="horizontal"
         android:layout_width="wrap_content"
         android:gravity="center"
         android:layout_height="wrap_content">

         <TextView
            android:textSize="25sp"
             android:textColor="@color/lib_white"
             android:gravity="center_vertical"
             android:text="用户ID："
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:id="@+id/textView" />

         <EditText
             android:gravity="center_vertical"
             android:paddingLeft="5dp"
             android:textSize="12sp"
             android:textColorHint="#8d8d8d"
             android:hint="请输入用户编号"
             android:background="@drawable/shap_bg_whiteall_corner"
             android:inputType="number"
             android:textColor="@color/background_material_dark"
             android:id="@+id/activity_login_tv_acount"
             android:layout_width="280dp"
             android:layout_height="38dp" />

     </LinearLayout>
     <LinearLayout
         android:layout_marginTop="20dp"
         android:gravity="center"
         android:layout_gravity="center_horizontal"
         android:orientation="horizontal"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">

         <TextView
             android:textSize="25sp"
             android:textColor="@color/lib_white"
             android:gravity="center_vertical"
             android:text="密    码："
             android:layout_width="wrap_content"
             android:layout_height="match_parent" />
         <EditText
             android:gravity="center_vertical"
             android:paddingLeft="5dp"
             android:textSize="12sp"
             android:textColorHint="#8d8d8d"
             android:hint="请输入密码"
             android:background="@drawable/shap_bg_whiteall_corner"
             android:textColor="@color/background_material_dark"
             android:id="@+id/activity_login_tv_password"
             android:layout_width="280dp"
             android:layout_height="38dp" />

     </LinearLayout>

        <Button
            android:layout_marginTop="40dp"
            android:layout_below="@+id/sign2"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:text="登 录"
            android:id="@+id/activity_login_btn_confirm"
            android:textColor="@color/lib_white"
            android:background="@drawable/tubian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
