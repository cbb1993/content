<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/view_title_root"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lib_title_height"
                android:background="@color/lib_title">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view_title_line"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/view_title_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/lib_title_text"
            android:textSize="@dimen/lib_text_size_big"/>

        <include
            layout="@layout/lib_view_title_back"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/view_title_btn_spare"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:paddingBottom="@dimen/lib_layout_padding"
            android:paddingLeft="@dimen/lib_layout_padding"
            android:paddingRight="@dimen/lib_layout_padding"
            android:paddingTop="@dimen/lib_layout_padding"
            android:src="@drawable/return1"/>

        <TextView
            android:id="@+id/view_title_tv_other"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/lib_layout_padding"
            android:paddingRight="@dimen/lib_layout_padding"
            android:textColor="@color/lib_title_text"
            android:textSize="@dimen/lib_text_size_normal"
            android:visibility="gone"/>


    </RelativeLayout>

    <View
        android:id="@+id/view_title_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lib_line_size"
        android:layout_alignParentBottom="true"
        android:background="@color/lib_line"/>

</RelativeLayout>