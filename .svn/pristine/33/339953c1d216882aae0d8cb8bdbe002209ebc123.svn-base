package com.huanhong.content.view.activity;

import android.content.Intent;
import android.view.View;
import android.widget.Button;
import android.widget.TextView;

import com.huanhong.content.R;
import com.huanhong.content.model.login.Login;
import com.huanhong.content.util.NormalUtil;
import com.zyn.lib.activity.BaseActivity;
import com.zyn.lib.util.SharedPreferencesUtils;

/**
 * Created by Administrator on 2017/1/3.
 */

public class LoginActivity extends BaseActivity{

    private TextView  activity_login_tv_acount;
    private TextView  activity_login_tv_password;
    private Button activity_login_btn_confirm;

    @Override
    protected int getContentViewId() {
        return R.layout.activity_login_weight_layout;
    }

    @Override
    protected void initView() {
        super.initView();
        activity_login_tv_acount= (TextView) findViewById(R.id.activity_login_tv_acount);
        activity_login_tv_password= (TextView) findViewById(R.id.activity_login_tv_password);
        activity_login_btn_confirm= (Button) findViewById(R.id.activity_login_btn_confirm);
    }

    @Override
    protected void initListener() {
        super.initListener();
        activity_login_btn_confirm.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View v) {
                if( validate()){
                    Login.saveInfo(activity_login_tv_acount.getText().toString(),activity_login_tv_password.getText().toString());
                    SharedPreferencesUtils.addData("acount",activity_login_tv_acount.getText().toString());
                    SharedPreferencesUtils.addData("password",activity_login_tv_password.getText().toString());
                    startActivity(new Intent(LoginActivity.this,SettingActivity.class).putExtra("flag","1"));
                    finish();
                }
            }
        });
    }

    private boolean validate(){
        if(activity_login_tv_acount.length()==0){
            NormalUtil.showToast("请输入帐号");
            return false;
        }
        if(activity_login_tv_password.length()==0){
            NormalUtil.showToast("请输入密码");
            return false;
        }
        return true;
    }

    @Override
    protected boolean isColorStatusBar() {
        return false;
    }
}
