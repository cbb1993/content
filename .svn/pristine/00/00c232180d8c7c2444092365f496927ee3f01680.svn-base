<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4c98ea">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">
        <View
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_weight="4"
            android:src="@drawable/duomeiti"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/earth"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:src="@drawable/baidi"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <ImageView
                        android:src="@drawable/touxiang"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/yonhudenglu"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp">


                    <TextView
                        android:textSize="25sp"
                        android:textColor="@color/lib_white"
                        android:gravity="center_vertical"
                        android:text="用户ID："
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/textView" />

                    <EditText
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:textSize="12sp"
                        android:textColorHint="#8d8d8d"
                        android:hint="请输入用户编号"
                        android:background="@drawable/shap_bg_whiteall_corner"
                        android:inputType="number"
                        android:textColor="@color/background_material_dark"
                        android:id="@+id/activity_login_tv_acount"
                        android:layout_width="280dp"
                        android:layout_height="38dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">

                    <TextView
                        android:layout_marginTop="5dp"
                        android:textSize="25sp"
                        android:textColor="@color/lib_white"
                        android:gravity="center_vertical"
                        android:text="密    码："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:textSize="12sp"
                        android:textColorHint="#8d8d8d"
                        android:hint="请输入密码"
                        android:background="@drawable/shap_bg_whiteall_corner"
                        android:textColor="@color/background_material_dark"
                        android:id="@+id/activity_login_tv_password"
                        android:layout_width="280dp"
                        android:layout_height="38dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="0.6"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <Button
                        android:layout_below="@+id/sign2"
                        android:textSize="20sp"
                        android:layout_gravity="center_horizontal"
                        android:text="登 录"
                        android:id="@+id/activity_login_btn_confirm"
                        android:textColor="@color/lib_white"
                        android:background="@drawable/tubian"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <View
        android:layout_weight="0.8"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>


</LinearLayout>
